[
	{
		// Normal Mode
		"context": "Editor && vim_mode == normal && !VimWaiting && !menu",
		"bindings": {
			"ctrl-b": "project_panel::ToggleFocus",
			"space f t": "terminal_panel::ToggleFocus",

			"space h": "editor::Hover",

			"space w v": "pane::SplitRight",
			"space w s": "pane::SplitDown",
			"space w q": "pane::CloseActiveItem",

			"ctrl-l": "workspace::ActivatePaneRight",
			"ctrl-h": "workspace::ActivatePaneLeft",
			"ctrl-k": "workspace::ActivatePaneUp",
			"ctrl-j": "workspace::ActivatePaneDown",

			"space space": "file_finder::Toggle",
			"space ,": "pane::DeploySearch",

			"space l": "editor::Format",

			"g d": "editor::GoToDefinition"
		}
	},
	{
		// Insert Mode
		"context": "Editor && vim_mode == insert && !VimWaiting && !menu",
		"bindings": {
			"ctrl-h": "editor::MoveLeft",
			"ctrl-j": "editor::MoveDown",
			"ctrl-k": "editor::MoveUp",
			"ctrl-l": "editor::MoveRight"
		}
	}
]
